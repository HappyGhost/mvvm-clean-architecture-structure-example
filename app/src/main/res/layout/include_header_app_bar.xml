<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/header_app_bar_height">

    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingLeft="@dimen/header_app_bar_padding_left_right"
            android:src="@drawable/ic_back"/>

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvHeader"
            android:layout_width="@dimen/header_app_bar_title_width"
            android:layout_height="match_parent"
            android:textSize="@dimen/header_app_bar_title_text_size"
            android:textStyle="bold"
            android:lines="1"
            android:gravity="center"
            android:ellipsize="end"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Title"/>

</android.support.constraint.ConstraintLayout>